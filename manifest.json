{
  "manifest_version": 3,
  "name": "Model Context Tool Inspector",
  "version": "1.0",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting"
  ],
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "runAt": "document_start",
      "js": ["content.js"]
    }
  ]
}